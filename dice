# Import the random library

import random

# Provide the dice values

lowest_num = 1
highest_num = 6

#For the loop when user input
roll_dice ="yes"

#This is the loop code

while roll_dice == "yes" or roll_dice == "y":
    print("Rolling the dice. Good luck...  ")


    #This code generates and prints the first number randomly

    print("The first number is.... ")
    print(random.randint(lowest_num, highest_num))

    #This code generates and prints the second number randomly
    print("The second number is ...  ")
    print(random.randint(lowest_num, highest_num))

    # Ask the user if they would like to roll the dice again.
    roll_dice = input("Would you like to roll the dice again? ")
